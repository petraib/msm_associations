<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Image url</dt>
      <dd><%= @movie.image_url %></dd>

      <dt>Director</dt>
      <dd><%= Director.find(@movie.director_id).name %></dd>
      
      <dt>Number of characters</dt>
      <dd><%=  Character.where(movie_id: @movie.id).count %></dd>


    </dl>

  <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Dob</th>
        <th>Bio</th>
        <th>Image url</th>
        <th>Actions</th>
      </tr>
      <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.dob %></td>
        <td><%= actor.bio %></td>
        <td><%= actor.image_url %></td>
        <td>
          <a href="/actors/<%= actor.id %>" class="btn btn-primary">Show</a>
          <a href="/actors/<%= actor.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_actor/<%= actor.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    
    
      <form action="/create_character" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for movie_id -->
      <div class="form-group">
        <label for="movie_id" class="control-label">
          
        </label>

        <input type="hidden" id="movie_id" name="movie_id" placeholder="Movie" class="form-control" value="<%=@movie.id %>">
      </div>

      <!-- Label and input for actor_id -->
      <div class="form-group">
        <label for="actor_id" class="control-label">Actor </label>
        <%= select_tag("actor_id", options_from_collection_for_select(Actor.all, :id, :name), :class => "form-control") %>
        <!--<input type="text" id="actor_id" name="actor_id" placeholder="Actor" class="form-control" value="<%=  %>">-->
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%=  %>">
      </div>

      <button class="btn btn-success">
        Create Character
      </button>
      or
      <a href="/characters">Cancel</a>
    </form>
    
    
    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
